# ===================================
# ErrorWise Backend - Environment Variables
# ===================================
# Copy this file to .env and fill in your values

# ===================================
# SERVER CONFIGURATION
# ===================================
NODE_ENV=development
PORT=3001
# IMPORTANT: Change these for production deployment
API_BASE_URL=http://localhost:3001
FRONTEND_URL=http://localhost:5173

# Production (uncomment and update when deploying)
# NODE_ENV=production
# API_BASE_URL=https://api.yourdomain.com
# FRONTEND_URL=https://yourdomain.com

# ===================================
# DATABASE CONFIGURATION
# ===================================
DATABASE_URL=postgresql://username:password@localhost:5432/errorwise_db
DB_HOST=localhost
DB_PORT=5432
DB_NAME=errorwise_db
DB_USER=your_db_username
DB_PASSWORD=your_db_password

# ===================================
# REDIS CONFIGURATION
# ===================================
REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379

# ===================================
# JWT & AUTHENTICATION
# ===================================
JWT_SECRET=your_jwt_secret_key_here
JWT_REFRESH_SECRET=your_jwt_refresh_secret_here
JWT_EXPIRES_IN=1h
JWT_REFRESH_EXPIRES_IN=7d
SESSION_SECRET=your_session_secret_here
BCRYPT_ROUNDS=12

# ===================================
# EMAIL SERVICE (SendGrid for Production)
# ===================================
# Development (Mailtrap)
SMTP_HOST=sandbox.smtp.mailtrap.io
SMTP_PORT=2525
SMTP_SECURE=false
SMTP_USER=your_mailtrap_username
SMTP_PASS=your_mailtrap_password

# Production (SendGrid - uncomment when deploying)
# SMTP_HOST=smtp.sendgrid.net
# SMTP_PORT=587
# SMTP_SECURE=false
# SMTP_USER=apikey
# SMTP_PASS=your_sendgrid_api_key_here

FROM_EMAIL=noreply@errorwise.tech
FROM_NAME=ErrorWise

# ===================================
# AI SERVICE API KEYS
# ===================================
OPENAI_API_KEY=sk-your-openai-api-key-here
GEMINI_API_KEY=your-gemini-api-key-here
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Tier-Based AI Configuration
# Free Tier:  Gemini Flash → OpenAI GPT-3.5 → Mock
# Pro Tier:   OpenAI GPT-3.5 → Gemini Flash → Claude Haiku → Mock  
# Team Tier:  Claude Sonnet → OpenAI GPT-4 → Gemini Pro → Mock
DEFAULT_SUBSCRIPTION_TIER=free

# ===================================
# PAYMENT GATEWAY (Dodo Payments)
# ===================================
DODO_PAYMENTS_API_KEY=your_dodo_api_key_here
DODO_PAYMENTS_SECRET=your_dodo_secret_here
DODO_WEBHOOK_SECRET=your_dodo_webhook_secret_here

# ===================================
# SECURITY & RATE LIMITING
# ===================================
CSRF_SECRET=your-csrf-secret-key-here
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
MAX_REQUESTS_PER_HOUR=20
MAX_REQUESTS_PER_DAY=100
MAX_FAILED_ATTEMPTS=5
LOCKOUT_DURATION=900

# ===================================
# CORS CONFIGURATION
# ===================================
CORS_ORIGIN=http://localhost:5173
ENABLE_CORS=true
# Production (comma-separated)
# CORS_ORIGIN=https://yourdomain.com,https://www.yourdomain.com

# ===================================
# LOGGING
# ===================================
LOG_LEVEL=info
LOG_FILE=logs/app.log
ENABLE_LOGGING=true

# ===================================
# OPTIONAL FEATURES
# ===================================
ENABLE_RATE_LIMITING=true
ENABLE_URL_SCRAPING=true