# ===================================
# ErrorWise Backend - Environment Variables
# ===================================
# Copy this file to .env and fill in your values

# ===================================
# SERVER CONFIGURATION
# ===================================
NODE_ENV=development
PORT=3001

# IMPORTANT: Change these for production deployment
API_BASE_URL=http://localhost:3001
BACKEND_URL=http://localhost:3001
FRONTEND_URL=http://localhost:5173
CORS_ORIGIN=http://localhost:5173

# Production (uncomment and update when deploying)
# NODE_ENV=production
# PORT=3001
# API_BASE_URL=https://api.yourdomain.com
# FRONTEND_URL=https://yourdomain.com
# CORS_ORIGIN=https://yourdomain.com,https://www.yourdomain.com

# ===================================
# DATABASE CONFIGURATION
# ===================================
DATABASE_URL=postgresql://username:password@localhost:5432/errorwise_db
DB_HOST=localhost
DB_PORT=5432
DB_NAME=errorwise_db
DB_USER=your_db_username
DB_PASSWORD=your_db_password

# ===================================
# REDIS CONFIGURATION
# ===================================
REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379

# ===================================
# JWT & AUTHENTICATION
# ===================================
# IMPORTANT: Generate secure secrets using: node generate-secrets.js
JWT_SECRET=your_jwt_secret_key_here_min_32_characters
JWT_REFRESH_SECRET=your_jwt_refresh_secret_here_min_32_characters
JWT_EXPIRES_IN=1h
JWT_REFRESH_EXPIRES_IN=7d
SESSION_SECRET=your_session_secret_here_min_32_characters
CSRF_SECRET=your_csrf_secret_here_min_32_characters
BCRYPT_ROUNDS=12

# ===================================
# EMAIL SERVICE (SendGrid for Production)
# ===================================
# Production (SendGrid - REQUIRED for deployment)
# Get your API key from: https://sendgrid.com/
SENDGRID_API_KEY=your_sendgrid_api_key_here
SMTP_HOST=smtp.sendgrid.net
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=apikey
SMTP_PASS=your_sendgrid_api_key_here

# Development (Mailtrap - comment out for production)
# SMTP_HOST=sandbox.smtp.mailtrap.io
# SMTP_PORT=2525
# SMTP_SECURE=false
# SMTP_USER=your_mailtrap_username
# SMTP_PASS=your_mailtrap_password

FROM_EMAIL=noreply@errorwise.tech
FROM_NAME=ErrorWise

# ===================================
# AI SERVICE API KEYS
# ===================================
# ONLY ANTHROPIC CLAUDE IS ENABLED FOR ALL TIERS
# Get your API key from: https://console.anthropic.com/
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Other providers are DISABLED (uncomment to re-enable in future)
# OPENAI_API_KEY=sk-your-openai-api-key-here
# GEMINI_API_KEY=your-gemini-api-key-here

# Tier-Based AI Configuration (All tiers use Anthropic Claude)
# Free Tier:  Claude Haiku (800 tokens) → Mock fallback
# Pro Tier:   Claude Haiku (1200 tokens) → Mock fallback  
# Team Tier:  Claude Sonnet (2000 tokens) → Mock fallback
DEFAULT_SUBSCRIPTION_TIER=free

# AI Service Performance Settings
# CACHE_TTL_MS=1800000           # 30 minutes cache TTL
# MAX_RETRIES=3                  # Number of retry attempts
# REQUEST_TIMEOUT_MS=30000       # 30 second timeout

# ===================================
# PAYMENT GATEWAY (Dodo Payments)
# ===================================
# New variables (used by the codebase)
DODO_API_KEY=your_dodo_api_key_here
DODO_SECRET_KEY=your_dodo_secret_here
DODO_API_URL=https://api.dodopayments.com/v1
DODO_WEBHOOK_SECRET=your_dodo_webhook_secret_here
# Optional: if you want to pre-configure the webhook URL in config
# DODO_WEBHOOK_URL=http://localhost:3001/api/webhooks/dodo

# Backwards-compatible variables (not used by current code, kept for reference)
# DODO_PAYMENTS_API_KEY=
# DODO_PAYMENTS_SECRET=

# ===================================
# SECURITY & RATE LIMITING
# ===================================
CSRF_SECRET=your-csrf-secret-key-here
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
MAX_REQUESTS_PER_HOUR=20
MAX_REQUESTS_PER_DAY=100
MAX_FAILED_ATTEMPTS=5
LOCKOUT_DURATION=900

# ===================================
# CORS CONFIGURATION
# ===================================
# Single origin for development
CORS_ORIGIN=http://localhost:5173
ENABLE_CORS=true

# Production (comma-separated for multiple origins)
# CORS_ORIGIN=https://yourdomain.com,https://www.yourdomain.com

# ===================================
# LOGGING
# ===================================
LOG_LEVEL=info
LOG_FILE=logs/app.log
ENABLE_LOGGING=true

# ===================================
# OPTIONAL FEATURES
# ===================================
ENABLE_RATE_LIMITING=true
ENABLE_URL_SCRAPING=true