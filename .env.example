# Dodo Payments Configuration
# ============================

# API Keys (Get these from your Dodo Payments dashboard)
DODO_API_KEY=your_dodo_api_key_here
DODO_SECRET_KEY=your_dodo_secret_key_here
DODO_MERCHANT_ID=your_dodo_merchant_id_here

# Webhook Configuration
DODO_WEBHOOK_SECRET=your_dodo_webhook_secret_here
DODO_WEBHOOK_URL=https://yourdomain.com/api/webhooks/dodo

# API Configuration
DODO_API_URL=https://api.dodopayments.com/v1
DODO_ENVIRONMENT=sandbox  # 'sandbox' for testing, 'production' for live

# Product IDs (Configure these in your Dodo Payments dashboard)
DODO_PRO_PLAN_ID=plan_pro_monthly
DODO_PRO_PRODUCT_ID=prod_pro_plan
DODO_ENTERPRISE_PLAN_ID=plan_enterprise_monthly
DODO_ENTERPRISE_PRODUCT_ID=prod_enterprise_plan

# Yearly Plans (Optional)
DODO_PRO_YEARLY_PLAN_ID=plan_pro_yearly
DODO_ENTERPRISE_YEARLY_PLAN_ID=plan_enterprise_yearly

# Currency and Regional Settings
DEFAULT_CURRENCY=USD
DEFAULT_TAX_RATE=0.0

# 3DS Authentication and Security
DODO_ENFORCE_3DS=false  # Set to 'true' to enforce 3D Secure authentication
DODO_AUTOMATIC_TAX=false  # Set to 'true' to enable automatic tax calculation

# Customer Portal (If available)
DODO_CUSTOMER_PORTAL_URL=https://portal.dodopayments.com

# Application URLs
FRONTEND_URL=http://localhost:3000
BACKEND_URL=http://localhost:5000

# Company Branding (Optional)
COMPANY_LOGO_URL=https://yourdomain.com/logo.png

# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/errorwise_db

# Redis Configuration
REDIS_URL=redis://localhost:6379

# JWT Secret
JWT_SECRET=your-super-secret-jwt-key-here

# Email Configuration (for notifications)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-email-password
EMAIL_FROM=ErrorWise <noreply@errorwise.com>

# OpenAI API Configuration
OPENAI_API_KEY=your-openai-api-key-here

# Gemini API Configuration  
GEMINI_API_KEY=your-gemini-api-key-here

# Node Environment
NODE_ENV=development